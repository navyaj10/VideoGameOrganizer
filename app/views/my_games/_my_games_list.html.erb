<h3>Your list of Games in your collection</h3>
<table>
  <tbody>
    <tr><td>Filter By -&nbsp;</td></tr>
    <tr>
      <td>Platform :</td>
      <td>
          <select name="game-platform" style="margin-top:10px;">
            <option value="All">All Platforms</option>
            <% unless @platform_list.nil? %>
                <% @platform_list.each_with_index do |record, index| %>
                    <option value="<%= record[0] %>"><%= record[1] %></option>
                <% end %>
            <% end %> 
          </select>
      </td>
      <td><span style="padding-left:5em;padding-right:5em;">AND / OR</span></td>
      <td>Genre :</td>
      <td>
          <select name="game-genre" style="margin-top:10px;">
            <option value="All">All Genres</option>
            <% unless @genre_list.nil? %>
                <% @genre_list.each_with_index do |record, index| %>
                    <option value="<%= record[0] %>"><%= record[0] %></option>
                <% end %>
            <% end %> 
          </select>
      </td>
      <td>&nbsp;
          <button type="button" id="filter">Show</button>
      </td>
    </tr>
  </tbody>
</table>
<div style="width: 100%;padding: 20px;">
    <div id="output-list" style="width: 100%; height: 460px; overflow: auto;float:right;">
      <div id="query-result"></div>
    </div>
</div>